{
  "name": "dwnload/wp-settings-api",
  "description": "A PHP class abstraction that removes all the headaches of the WordPress settings API under the hood and builds a nice options panel on the fly.",
  "version": "3.0.0",
  "license": "MIT",
  "authors": [
    {
      "name": "Austin Passy",
      "email": "thefrosty@users.noreply.github.com",
      "homepage": "https://austin.passy.co",
      "role": "Developer"
    }
  ],
  "config": {
    "sort-packages": true,
    "preferred-install": "dist",
    "optimize-autoloader": true
  },
  "require": {
    "php": "^7.1",
    "composer/installers": "~1.0",
    "thefrosty/wp-utilities": "^1.4"
  },
  "require-dev": {
    "10up/wp_mock": "dev-dev",
    "inpsyde/php-coding-standards": "^0.13.3",
    "phpmd/phpmd": "^2.6",
    "phpunit/phpunit": "6.*",
    "wp-phpunit/wp-phpunit": "4.9.*"
  },
  "scripts": {
    "post-install-cmd": [
      "@phpcs"
    ],
    "post-update-cmd": [
      "@phpcs"
    ],
    "phpcs": [
      "./vendor/bin/phpcs --standard=phpcs.ruleset.xml"
    ]
  },
  "autoload": {
    "psr-4": {
      "Dwnload\\WpSettingsApi\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Dwnload\\WpSettingsApi\\Tests\\": "tests"
    }
  }
}
